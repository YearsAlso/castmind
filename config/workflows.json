{
  "workflows": {
    "basic_processing": {
      "name": "基础处理工作流",
      "description": "基础的播客处理流程：RSS解析 → 音频下载 → 文字转录 → AI总结 → 笔记生成",
      "steps": [
        {
          "name": "rss_parsing",
          "module": "workflow.rss_parser",
          "function": "parse_feed",
          "timeout": 30,
          "retries": 3,
          "enabled": true
        },
        {
          "name": "audio_download",
          "module": "workflow.audio_processor",
          "function": "download_audio",
          "timeout": 300,
          "retries": 3,
          "enabled": true
        },
        {
          "name": "transcription",
          "module": "workflow.audio_processor",
          "function": "transcribe_audio",
          "timeout": 600,
          "retries": 2,
          "enabled": true
        },
        {
          "name": "ai_summary",
          "module": "intelligence.analyzer",
          "function": "generate_summary",
          "timeout": 60,
          "retries": 2,
          "enabled": true
        },
        {
          "name": "note_generation",
          "module": "workflow.note_generator",
          "function": "generate_note",
          "timeout": 30,
          "retries": 2,
          "enabled": true
        }
      ],
      "parallel_steps": false,
      "error_handling": "continue",
      "notifications": true
    },
    
    "advanced_analysis": {
      "name": "高级分析工作流",
      "description": "包含深度分析的完整工作流",
      "steps": [
        {
          "name": "basic_processing",
          "workflow": "basic_processing",
          "enabled": true
        },
        {
          "name": "key_points_extraction",
          "module": "intelligence.analyzer",
          "function": "extract_key_points",
          "timeout": 90,
          "retries": 2,
          "enabled": true
        },
        {
          "name": "sentiment_analysis",
          "module": "intelligence.analyzer",
          "function": "analyze_sentiment",
          "timeout": 60,
          "retries": 2,
          "enabled": true
        },
        {
          "name": "business_insights",
          "module": "intelligence.analyzer",
          "function": "generate_insights",
          "timeout": 120,
          "retries": 2,
          "enabled": true
        },
        {
          "name": "knowledge_integration",
          "module": "knowledge.storage",
          "function": "integrate_knowledge",
          "timeout": 60,
          "retries": 2,
          "enabled": true
        }
      ],
      "parallel_steps": true,
      "error_handling": "stop",
      "notifications": true
    },
    
    "quick_summary": {
      "name": "快速总结工作流",
      "description": "仅进行RSS解析和AI总结的快速工作流",
      "steps": [
        {
          "name": "rss_parsing",
          "module": "workflow.rss_parser",
          "function": "parse_feed",
          "timeout": 30,
          "retries": 3,
          "enabled": true
        },
        {
          "name": "ai_summary",
          "module": "intelligence.analyzer",
          "function": "generate_quick_summary",
          "timeout": 30,
          "retries": 2,
          "enabled": true
        }
      ],
      "parallel_steps": false,
      "error_handling": "continue",
      "notifications": false
    }
  },
  
  "scheduling": {
    "daily_processing": {
      "workflow": "basic_processing",
      "schedule": "0 8 * * *",  # 每天8:00
      "enabled": true,
      "notify_on_completion": true
    },
    "hourly_check": {
      "workflow": "quick_summary",
      "schedule": "0 * * * *",  # 每小时
      "enabled": true,
      "notify_on_completion": false
    },
    "weekly_analysis": {
      "workflow": "advanced_analysis",
      "schedule": "0 9 * * 1",  # 每周一9:00
      "enabled": true,
      "notify_on_completion": true
    }
  },
  
  "default_workflow": "basic_processing",
  "max_concurrent_workflows": 3,
  "workflow_timeout": 3600
}